{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Check coverage",
            "type": "shell",
            "command": "pdm",
            "args": [
                "run",
                "pytest",
                "--diff-symbols",
                "--hypothesis-verbosity=normal",
                "--cov-report=xml",
                "--cov-report=term-missing",
                "--cov=repid",
            ],
            "group": "test",
        },
        {
            "label": "PDM sync",
            "type": "shell",
            "command": "pdm sync -G :all --clean",
            "presentation": {
                "reveal": "silent",
                "showReuseMessage": false,
            },
            "runOptions": {
                "runOn": "folderOpen",
            },
            "problemMatcher": []
        },
    ]
}
